#!/bin/bash

#
# Usage Example:
#
# ```
# ./bin/post-source http://guest:guest@localhost:9080/AUX_CU_029008_V01.tar/AUX_CU_029008_20171018_TRENDS.tif
# ```
#
#

#
# You may use data provided by the NGINX test server included with Chipmunk.
#
# SRB1_URL="http://guest:guest@localhost:9080/LC08_CU_027009_20130701_20170729_C01_V01_SR.tar/LC08_CU_027009_20130701_20170729_C01_V01_SRB1.tif"
# TRENDS_URL="http://guest:guest@localhost:9080/AUX_CU_029008_V01.tar/AUX_CU_029008_20171018_TRENDS.tif"
#

if [ "$1" != "" ]; then
    curl --silent -X POST \
	 -H 'Content-Type: application/json' \
	 -H 'Accept: application/json' \
	 -d "{\"url\":\"$1\"}" \
	 'http://localhost:5656/inventory'
else
    echo 'No URL specified.'
fi
