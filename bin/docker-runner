#!/bin/bash

VERSION=${1:-develop-0.1.0-SNAPSHOT}

echo
echo "Starting Chipmunk ($VERSION) with Docker"
echo

if [ $# -eq 0 ]; then
    docker pull usgseros/lcmap-chipmunk:$VERSION
fi

docker run -p 5656:5656 \
  -e DB_HOST=resources_cassandra_1 \
  -e DB_KEYSPACE=chipmunk_local \
  -e HTTP_PORT=5656 \
  --net=resources_lcmap_chipmunk \
  -it usgseros/lcmap-chipmunk:$VERSION
